<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffbbbb">
    
    <ImageView
        android:id="@+id/bendera"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/benderaindonesia"/>

    <LinearLayout
        android:id="@+id/linePilGan"
        android:layout_width="146dp"
        android:layout_height="168dp"
        android:layout_below="@+id/bendera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        android:background="#86ff94"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgKuis"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_alignTop="@+id/linePilGan"
            android:layout_alignBottom="@+id/linePilGan"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/gbr_pilihanganda" />

        <TextView
            android:id="@+id/txtKuis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text=" Mulai Kuis"
            android:textSize="16sp" />
    </LinearLayout>




</RelativeLayout>